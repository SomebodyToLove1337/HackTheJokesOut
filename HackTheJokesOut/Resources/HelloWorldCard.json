{
  "type": "AdaptiveCard",
  "body": [
    {
      "type": "TextBlock",
      "size": "Medium",
      "weight": "Bolder",
      "text": "${title}",
      "wrap": true
    },
    {
      "type": "TextBlock",
      "text": "${body}",
      "wrap": true
    }

  ],
  "actions": [
    {
      "type": "Action.Submit",
      "title": "Next",
      "data": {
        "buttonClicked": true
      }
    }
  ],
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "version": "1.4"
}
